<%- include ../partials/header.ejs %>

<!-- Content for the Details page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

                <div class="form-group">
                    <label for="makeTextField">Product ID:</label>
                    <strong><%= Prod.make %></strong>
                </div>
                <div class="form-group">
                    <label for="modelTextField">Product Name:</label>
                    <strong><%= Prod.model %></strong>
                </div>
                <div class="form-group">
                    <label for="yearTextField">Seller Information:</label>
                    <strong><%= Prod.year %></strong>                    
                </div>
                <div class="form-group">
                    <label for="kmTextField">Product Information Link:</label>
                    <strong><%= Prod.kilometers %></strong>
                </div>
                <div class="form-group">
                    <label for="doorsTextField">Product Description:</label>
                    <strong><%= Prod.doors %></strong>                    
                </div>
              
                <div class="form-group">
                    <label for="priceTextField">Price:</label>
                    <strong>$ <%= Prod.price %></strong>                    
                </div>
                <br />
                
                <a href="/products/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

